rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Token balances - users can read/write their own balance
    match /tokenBalances/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // NFT ownership - users can read/write their own NFTs
    match /nftOwnership/{document} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid == request.resource.data.ownerId);
    }
    
    // NFT transactions - users can read their own transactions, write new ones
    match /nftTransactions/{document} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == resource.data.buyer || 
         request.auth.uid == resource.data.seller);
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.userId || 
         request.auth.uid == request.resource.data.buyer);
    }
    
    // Certificates - users can read/write their own certificates
    match /certificates/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Achievements - users can read/write their own achievements
    match /achievements/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Wallet stats - users can read/write their own stats
    match /walletStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

